{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "types": ["react", "react-dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["**/*.ts", "**/*.tsx", "../../../package.json"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../shared-i18n" }
  ]
}
