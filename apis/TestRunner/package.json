{
  "name": "@asafarim/testrunner",
  "version": "1.1.0",
  "description": "TestCafe test runner for Test Automation Platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "api": "concurrently  \"pnpm dev\" \"cd ../TestAutomation.Api && dotnet watch run --project TestAutomation.Api.csproj\"",
    "build": "tsc",
    "test": "testcafe chrome tests/",
    "test:headless": "testcafe chrome:headless tests/",
    "test:specific": "testcafe chrome tests/fixtures/example.js",
    "test:parallel": "testcafe chrome:headless -c 3 tests/",
    "preapi": "kill-port 4000"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@microsoft/signalr": "^8.0.7",
    "axios": "^1.6.2",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nanoid": "^4.0.0",
    "testcafe": "^3.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "chromium": "^3.0.3",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}